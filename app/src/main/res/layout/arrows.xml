<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    app:role="controller">-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <com.version1.dbfz_combos.KeyButton
                android:id="@+id/button7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:keyName="7"
                app:srcCompat="@drawable/button7" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.version1.dbfz_combos.KeyButton
                android:id="@+id/button4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:keyName="4"
                app:srcCompat="@drawable/button4" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.version1.dbfz_combos.KeyButton
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:keyName="1"
                app:srcCompat="@drawable/button1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <com.version1.dbfz_combos.KeyButton
                android:id="@+id/button8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:keyName="8"
                app:srcCompat="@drawable/button8" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.version1.dbfz_combos.KeyButton
                android:id="@+id/button5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:keyName="5"
                app:srcCompat="@drawable/button5" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.version1.dbfz_combos.KeyButton
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:keyName="2"
                app:srcCompat="@drawable/button2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <com.version1.dbfz_combos.KeyButton
                android:id="@+id/button9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:keyName="9"
                app:srcCompat="@drawable/button9" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.version1.dbfz_combos.KeyButton
                android:id="@+id/button6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:keyName="6"
                app:srcCompat="@drawable/button6" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.version1.dbfz_combos.KeyButton
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:keyName="3"
                app:srcCompat="@drawable/button3" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>