<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Combo_Keyboard">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="390dp"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/command"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Commands:"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/commandList"
                    android:layout_width="289dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:text="Enter Your Combos"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/character"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:text="Characters:"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.version1.dbfz_combos.CallButtonLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">

        <com.version1.dbfz_combos.CallKeyButton
            android:id="@+id/joypad"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttoncaller"
            android:onClick="onClick"
            app:name ="Commands" />

        <com.version1.dbfz_combos.CallKeyButton
            android:id="@+id/chara"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttoncaller"
            android:onClick="onClick"
            app:name="Main" />


        <com.version1.dbfz_combos.CallKeyButton
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttoncaller"
            android:onClick="onClick"
            app:name="Assists" />


    </com.version1.dbfz_combos.CallButtonLayout>

    <com.version1.dbfz_combos.KeyBoard
        android:id="@+id/customKeyboard"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
    </com.version1.dbfz_combos.KeyBoard>


</androidx.constraintlayout.widget.ConstraintLayout>